{
  "name": "sponsorexplorer",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "client/**",
    "server/**",
    "utils/configs/**",
    "utils/types/**"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --filter=client",
    "lint": "prettier --check . && eslint .",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "**/*.{svelte,ts,js,md}": [
      "prettier --write .",
      "eslint . --quiet --fix"
    ]
  },
  "devDependencies": {
    "@kuro-utils/eslint-config-base": "*",
    "@kuro-utils/types": "*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "typescript": "^5.0.0"
  },
  "type": "module"
}
